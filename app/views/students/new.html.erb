<body>
<div id="content_wrapper" >
  <div id="side_bar">

    <div id="sidebar_news_area">
      
    </div>
  </div>
  <div id="content">
  <div id="content-header">
    <img alt="Admission_page_logo" src="/images/admission/admission_page_logo.jpg" />
    <h1>Admission</h1>
    <h3>Step 1 - Student details</h3>
    <div id="app-back-button">
      <a href="#" onclick="history.back(); return false;"><img alt="Back" border="0" src="/images/buttons/back.png" /></a>
    </div>
  </div>

  <div id="page-yield">


  <%= form_for @student do |f| %>
    <div id="admission1_form">

      <div id="necessary-field-notification"> Fields marked with <span class="necessary-field">*</span> must be filled.</div>
      <%= f.fields_for :admission do |adm| %>
        <div id="autofill-area">
          <div class="student_admission_date">
            <%= adm.label "Admission Number" %>
            <%= adm.text_field :number %>
          <!-- <span class="necessary-field">*</span> </label>
          <div class="text-input-bg-admission"> 
            
              <input id="student_admission_no" name="student[admission_no]" size="30" type="text" value="1017" /> -->
          </div>
        </div>

        <div class="student_admission_date">
          <%= adm.label "Admission Date" %>
          <!-- <label for="student_admission_date">Admission Date <span class="necessary-field">*</span> </label> -->
          <div class="text-input-bg-admission">
            <%= adm.text_field :admission_date %>
            <!-- <input id="student[admission_date]" name="student[admission_date]" readonly="readonly" type="text" value="2013-04-23" /> <img alt="Calendar" class="calendar_date_select_popup_icon" onclick="new CalendarDateSelect( $(this).previous(), {popup:'force', year_range:[1998, 2018]} );" src="/images/calendar_date_select/calendar.gif?1350041856" style="border:0px; cursor:pointer;" /> -->
          </div>
        </div>
      <% end %>
      </div>
      <span class="span-sub-heading">Personal Details</span>
      <hr class="sub-heading"></hr>
      <div class="label-field-pair">
        <%= f.label "First Name" %><span class="necessary-field">*</span> 
        <!-- <label for="student_grade">First Name<span class="necessary-field">*</span> </label> 
        <div class="text-input-bg"><input id="student_first_name" name="student[first_name]" size="30" type="text" /></div> -->
        <div class="text-input-bg">
          <%= f.text_field :first_name %>
        </div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <%= f.label "Middle Name" %> 
        <div class="text-input-bg">
          <%= f.text_field :middle_name %>
        </div>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <%= f.label "Last Name" %>
        <div class="text-input-bg">
          <%= f.text_field :last_name %>      
        </div>
      </div>

      <hr class="label-underline"></hr>

      <div id="admission1_form_vertical_block_left">

        <div class="label-field-pair">
          <%= f.label "Course & Batch" %>
          <div class="text-input-bg">
            <%= f.select :course_batch_id, options_from_collection_for_select(Batch.all, :id, :name) %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Date of Birth" %><span class="necessary-field">*</span>
          <div class="text-input-bg">
            <%= f.text_field :date_of_birth %>
          </div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label_field_pair">
          <div class="label_for_student_gender" >
            <%= f.label "Gender" %>
          </div>
          <div class="student_gender_value">
            <div class="label_for_gender">
              <%= f.label "Male" %>
              <%= f.radio_button "gender", "0" %>
              <%= f.label "Female" %>
              <%= f.radio_button "gender", "1" %>
            </div>
          </div>
          <!-- <label class="label_for_student_gender" for="student_gender">Gender</label>
          <div class="student_gender_value">
            <label class="label_for_gender" for="student_gender_true"> Male</label>
            <input checked="checked" id="student_gender_m" name="student[gender]" type="radio" value="m" />
            <label class="label_for_gender" for="student_gender_false">Female</label>
            <input id="student_gender_f" name="student[gender]" type="radio" value="f" />
          </div> -->
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Blood Group" %>
          <div class="text-input-bg">
            <%= f.select :blood_group_id, options_from_collection_for_select(BloodGroup.all, :id, :name) %>
          </div>
        </div>

        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <%= f.label "Birth Place" %>
          <div class="text-input-bg">
            <%= f.text_field :birth_place %>
          </div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Nationality" %>
          <div class="text-input-bg">
            <%= f.select :nationality_id, options_from_collection_for_select(Nationality.all, :id, :name) %>
          </div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Mother Tongue" %>
          <div class="text-input-bg">
            <%= f.text_field :mother_tongue %>
          </div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Category" %>
          <div class="text-input-bg">
            <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>
          </div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label "Religion" %>
          <div class="text-input-bg">
            <%= f.text_field :religion %>
          </div>
        </div>

      </div>
      
      <!-- Personal Details Form ends here -->

      <div id="admission1_form_vertical_block_right">
        <span class="span-sub-heading">Contact Details</span>
        <hr class="sub-heading"></hr>
        <div class="label-field-pair">
          <!-- fields for contact details starts here -->
          <%= f.fields_for :contact_detail do |cnt| %>
            <%= cnt.label "Address Line1" %>
            <div class="text-input-bg">
              <%= cnt.text_field :address_line1 %>
            </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "Address Line2" %>
          <div class="text-input-bg">
            <%= cnt.text_field :address_line2 %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "City" %>
          <div class="text-input-bg">
            <%= cnt.text_field :city %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "State" %>
          <div class="text-input-bg">
            <%= cnt.text_field :state %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "PIN code" %>
          <div class="text-input-bg">
            <%= cnt.text_field :pincode %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "Phone" %>
          <div class="text-input-bg">
            <%= cnt.text_field :phone %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "Mobile" %>
          <div class="text-input-bg">
            <%= cnt.text_field :mobile %>
          </div>
        </div>
        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= cnt.label "Email" %>
          <div class="text-input-bg">
            <%= cnt.text_field :email %>
          </div>
        </div>
        
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <%= cnt.label "Enable SMS Features", :as => "checkbox" %>
            <%= cnt.text_field  %>
          </div>
          <label for="student_sms">Enable SMS Features</label>
          <div class="text-input-bg"><input name="student[is_sms_enabled]" type="hidden" value="0" /><input checked="checked" id="student_is_sms_enabled" name="student[is_sms_enabled]" type="checkbox" value="1" /></div>
        </div>
      <% end %><!-- contact details ends here-->
      <% end %><!-- student details ends here-->
        <br/>
        <script>
          (function($){$.fn.filestyle=function(options){var settings={width:250};if(options){$.extend(settings,options);};return this.each(function(){var self=this;var wrapper=$("<div>").css({"width":settings.imagewidth+"px","height":settings.imageheight+"px","background":"url("+settings.image+") 0 0 no-repeat","background-position":"right","display":"inline","position":"absolute","overflow":"hidden"});var filename=$('<input class="file">').addClass($(self).attr("class")).css({"display":"inline","width":settings.width+"px"});$(self).before(filename);$(self).wrap(wrapper);$(self).css({"position":"relative","height":settings.imageheight+"px","width":settings.width+"px","display":"inline","cursor":"pointer","opacity":"0.0"});if($.browser.mozilla){if(/Win/.test(navigator.platform)){$(self).css("margin-left","-142px");}else{$(self).css("margin-left","-168px");};}else{$(self).css("margin-left",settings.imagewidth-settings.width+"px");};$(self).bind("change",function(){filename.val($(self).val());});});};})(jQuery);
        </script>
         <span class="span-sub-heading">Upload User Photo</span>
        <hr class="sub-heading"></hr>
        <div class="label-field-pair">
          <label for="student_image_file">Upload User Photo (50KB max)</label>
          <div class="text-input-bg"><input id="student_photo" name="student[photo]" size="12" type="file" /></div>

        </div>
      </div>
      <div class="extender">

      </div>
    </div>

    <input class="submit_button" name="commit" type="submit" value="â–º Save &amp; Proceed" />
  </form>

</div>
 </div>

      <div class="extender"></div>
    </div>

    <div id="footer">
      <div id="footer_logo">
        <div id="powered_by">
          Powered by <a href=http://www.projectfedena.org target="_blank">Fedena</a>
        </div>
      </div>
    </div> 
  </body>
